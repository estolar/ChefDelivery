<div class="container my-5">
  <h1 class="mb-4 text-center">Editar Orden</h1>

  <div class="card p-4 shadow-sm">
    <h3 class="h5 mb-3">Actualizar Orden</h3>
    <%= simple_form_for(@service, html: { class: 'form-horizontal' }) do |f| %>

      <div class="form-group mb-3">
        <%= f.input :name %>
      </div>

      <div class="form-group mb-3">
        <%= f.input :description %>
      </div>

      <div class="form-group mb-3">
        <%= f.input :cost %>
      </div>

      <div class="form-group mb-3">
        <%= f.association :category, label_method: :category %>
      </div>
      <div class="form-group mb-3">
        <%= f.hidden_field :user_id, value: current_user.id %>
      </div>
      <div class="form-group mb-3">
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to 'Cancelar', service_path(@service), class: 'btn btn-link text-decoration-none' %>
        <%= f.submit 'Actualizar', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
