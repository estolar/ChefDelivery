<div class="service-page">
  <div class="container-fluid py-5" style="background-size: cover; background-position: center center; background-repeat: no-repeat; min-height: 100vh;">
    <div class="container">
      <h1 class="text-center text-success mb-5">Lista de servicios</h1>

      <div class="row">
        <% @services.each do |service| %>
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm" style="background-color: rgba(255, 255, 255, 0.5); backdrop-filter: blur(10px); border-radius: 10px; transition: all 0.3s ease;">
              <div class="card-img-top">
                <% if service.photos.attached? %>
                  <%= cl_image_tag(service.photos.first.key, alt: service.name, class: "img-fluid", style: "width: 100%; height: 200px; object-fit: cover;") %>
                <% else %>
                  <img src="https://via.placeholder.com/300" alt="<%= service.name %>" class="img-fluid" style="width: 100%; height: 200px; object-fit: cover;" />
                <% end %>
              </div>
              <div class="card-body text-center">
                <h2 class="card-title">
                  <%= link_to service.name, service_path(service), class: "text-decoration-none text-success" %>
                </h2>
                <div class="card-text">
                  <strong>Descripci√≥n</strong>
                  <p class="text-muted"><%= service.description %></p>
                </div>
              </div>
              <div class="card-footer text-center">
                <%= link_to "Editar", new_service_path, class: "btn btn-success" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
