<!-- Cabecera que ocupa todo el ancho -->
<header class="bg-white text-dark py-2 shadow-sm">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <img src="<%= asset_path('http://enrsto.freehostia.com/enriquestolar.com/img/logo-horizontal.png') %>" alt="ChefDelivery Logo" height="60">

    <!-- Botón Publica tu Servicio -->
    <a href="<%= new_service_path %>" class="btn custom-btn">Publica tu Servicio</a>

    <!-- Inicio de Sesión / Logueo / Notificaciones -->
    <div class="d-flex align-items-center">
      <!-- Notificaciones -->
      <div class="position-relative mx-3">
        <i class="fas fa-bell fa-lg"></i>
        <span class="badge bg-danger position-absolute top-0 start-100 translate-middle">1</span>
      </div>

      <!-- Menú de Usuario / Inicio de Sesión -->
      <div class="d-flex align-items-center">
        <a href="<%= new_user_session_path %>" class="btn btn-outline-dark d-flex align-items-center">
          <i class="fas fa-user-circle fa-lg mx-2"></i>
          <span>Iniciar Sesión</span>
        </a>
      </div>
    </div>
  </div>
</header>

<!-- Carrusel que ocupa todo el ancho -->
<div class="container-fluid p-0">
  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" style="height: 400px;">
    <ol class="carousel-indicators">
      <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
      <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
      <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" style="height: 400px;">
      <div class="carousel-item active">
        <img src="http://enrsto.freehostia.com/enriquestolar.com/img/imagen3.png" class="d-block w-100" alt="Slide 1" style="object-fit: cover; height: 100%; display: block;">
      </div>
      <div class="carousel-item">
        <img src="http://enrsto.freehostia.com/enriquestolar.com/img/imagen2.png" class="d-block w-100" alt="Slide 2" style="object-fit: cover; height: 100%; display: block;">
      </div>
      <div class="carousel-item">
        <img src="http://enrsto.freehostia.com/enriquestolar.com/img/imagen1.png" class="d-block w-100" alt="Slide 3" style="object-fit: cover; height: 100%; display: block;">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<!-- Contenido principal dentro de un container de 1000px -->
<main class="container mt-4" style="max-width: 1000px;">
  <h2 class="text-center">Servicios Destacados</h2>
  <div class="row">
    <% if @services.any? %>
      <% @services.each do |service| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <%= image_tag 'default_service.png', class: 'card-img-top', alt: service.name %>
            <div class="card-body">
              <h5 class="card-title"><%= service.name %></h5>
              <p class="card-text"><%= truncate(service.description, length: 100) %></p>
              <div class="d-flex justify-content-between align-items-center">
                <span class="text-muted">S/ <%= service.cost %></span>
                <a href="<%= service_path(service) %>" class="btn btn-sm btn-outline-secondary">Ver más</a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center">No hay servicios disponibles en este momento.</p>
    <% end %>
  </div>
</main>

<!-- Footer que ocupa todo el ancho -->
<footer class="bg-dark text-white mt-4 py-3">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4">
        <h5>Enlaces</h5>
        <ul class="list-unstyled">
          <li><a href="#" class="text-white">Preguntas Frecuentes</a></li>
          <li><a href="#" class="text-white">Términos y Condiciones</a></li>
          <li><a href="#" class="text-white">Política de Privacidad</a></li>
        </ul>
      </div>
      <div class="col-md-4 text-center">
        <h5>ChefDelivery</h5>
        <p>Sabor y pasión donde tú quieras</p>
      </div>
      <div class="col-md-4 text-end">
        <h5>Desarrollado por</h5>
        <p>Equipo ChefDelivery</p>
        <img src="<%= asset_path('http://enrsto.freehostia.com/enriquestolar.com/img/logo-vertical.png') %>" alt="ChefDelivery Logo Vertical" height="80">
      </div>
    </div>
  </div>
</footer>
